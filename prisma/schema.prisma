generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/files/database/vananimedb.sqlite"
}

model Torrent {
  id              Int    @id @default(autoincrement())
  torrentName     String
  magnet          String
  infoHash        String @unique
  filesList       Json? // object[]
  torrentSavePath String
  taskId          Int?   @unique
  Task            Task?
}

model Task {
  id               Int      @id @default(autoincrement())
  isCompleted      Boolean  @default(false)
  isDownloaded     Boolean  @default(false)
  addDate          DateTime @default(now())
  selectedContents Json? // object[]
  customEpisodes   Json? // object[]
  torrent          Torrent  @relation(fields: [torrentId], references: [id])
  torrentId        Int      @unique
}
